<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Cat Jump Game</title>
<style>
    body {
        display: flex;
        justify-content: center;
        margin-top: 50px;
        background: #87CEEB;
        font-family: Arial, sans-serif;
    }

    .game {
        width: 600px;
        height: 200px;
        background: linear-gradient(to bottom, #87CEEB 70%, #3CB371 30%);
        border: 2px solid #000;
        position: relative;
        overflow: hidden;
    }

    .cat {
        width: 40px;
        height: 40px;
        background: orange;
        position: absolute;
        bottom: 30px;
        left: 50px;
        border-radius: 10px;
    }

    .obstacle {
        width: 30px;
        height: 40px;
        background: brown;
        position: absolute;
        bottom: 30px;
        left: 600px;
        animation: move 2s linear infinite;
    }

    @keyframes move {
        0% { left: 600px; }
        100% { left: -30px; }
    }

    .jump {
        animation: jump 0.5s;
    }

    @keyframes jump {
        0% { bottom: 30px; }
        50% { bottom: 120px; }
        100% { bottom: 30px; }
    }
</style>
</head>
<body>

<div class="game">
    <div class="cat" id="cat"></div>
    <div class="obstacle" id="obstacle"></div>
</div>

<script>
    const cat = document.getElementById("cat");
    const obstacle = document.getElementById("obstacle");

    document.addEventListener("keydown", function () {
        if (!cat.classList.contains("jump")) {
            cat.classList.add("jump");

            setTimeout(() => {
                cat.classList.remove("jump");
            }, 500);
        }
    });

    setInterval(() => {
        const catBottom = parseInt(window.getComputedStyle(cat).getPropertyValue("bottom"));
        const obstacleLeft = parseInt(window.getComputedStyle(obstacle).getPropertyValue("left"));

        if (obstacleLeft < 80 && obstacleLeft > 40 && catBottom <= 40) {
            alert("Game Over!");
            obstacle.style.animation = "none";
            obstacle.style.left = obstacleLeft + "px";
        }
    }, 10);
</script>

</body>
</html>

